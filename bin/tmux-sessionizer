#!/usr/bin/env bash
if [[ $# -eq 1 ]]; then
    selected=$1
else
  selected=$(find ~/proj /disk1/sand $HOME $HOME/repos -mindepth 1 -maxdepth 1 -type d | fzf)   # | sed "s|^$HOME/||" | sed "s|^/disk1/||" | fzf)
    # [[ $selected ]] && selected="$HOME/$selected"
fi

if [[ -z $selected ]]; then
    exit 0
fi


selected_name=$(basename "$selected" | tr . _)

# Allow proj to override base directory
if [[ -e $selected/.proj ]]; then
   proj_dir=$selected
   selected=$(cat $selected/.proj)
fi

tmux_running=$(pgrep tmux)
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected -e PROJ="$proj_dir"
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected -e PROJ="$proj_dir"
fi


# Try switching sessions, but if that doesn't work, attach.
if ! tmux switch-client -t $selected_name 2> /dev/null; then 
    tmux a -t $selected_name 
fi
